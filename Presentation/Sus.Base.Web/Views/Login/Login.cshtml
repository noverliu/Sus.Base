@using Sus.Base.Framework.UI
@using Sus.Base.Web.Model.Login
@model LoginModel

@{
    Html.SetBodyClass("login");
    Html.AddTitleParts("登录");
    Html.AddCssFileParts(ResourceLocation.PageStyle,"~/assets/pages/css/login-4.min.css");
    Html.AddCssFileParts(ResourceLocation.PagePlugin, "~/assets/global/plugins/select2/css/select2.min.css");
    Html.AddCssFileParts(ResourceLocation.PagePlugin, "~/assets/global/plugins/select2/css/select2-bootstrap.min.css");

    Html.AddScriptParts(ResourceLocation.PageScript, "~/assets/pages/scripts/login-4.min.js");
    Html.AppendScriptParts(ResourceLocation.PagePlugin, "~/assets/global/plugins/backstretch/jquery.backstretch.min.js");
    Html.AppendScriptParts(ResourceLocation.PagePlugin, "~/assets/global/plugins/select2/js/select2.full.min.js");
    Html.AppendScriptParts(ResourceLocation.PagePlugin, "~/assets/global/plugins/jquery-validation/js/additional-methods.min.js");
    Html.AppendScriptParts(ResourceLocation.PagePlugin, "~/assets/global/plugins/jquery-validation/js/jquery.validate.min.js");
    
}

<div class="logo">
    <a>
        <img src="../assets/pages/img/logo-big.png" alt="" />
    </a>
</div>
<!-- END LOGO -->
<!-- BEGIN LOGIN -->
<div class="content">
    <!-- BEGIN LOGIN FORM -->
    @using (Html.BeginForm(FormMethod.Post, new { @class = "login-form" }))
    {
        <h3 class="form-title">登录</h3>
        @if (Model.ShowWarning)
        {
        <div class="alert alert-danger display-show">
            <button class="close" data-close="alert"></button>
            @Html.ValidationSummary(true)
        </div>
        }
        <div class="form-group">
            <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->            
            <label class="control-label visible-ie8 visible-ie9">用户名</label>
            <div class="input-icon">
                <i class="fa fa-user"></i>
                @Html.TextBoxFor(x => x.Username, "",new { @class= "form-control placeholder-no-fix" })
                @*<input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="用户名" name="username" />*@
            </div>
        </div>
        <div class="form-group">
            <label class="control-label visible-ie8 visible-ie9">密码</label>
            <div class="input-icon">
                <i class="fa fa-lock"></i>
                @Html.PasswordFor(x=>x.Password,new { @class= "form-control placeholder-no-fix" })
                @*<input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="密码" name="password" />*@
            </div>
        </div>
        <div class="form-actions">
            <label class="rememberme mt-checkbox mt-checkbox-outline">
                @Html.EditorFor(x=>x.Remember)
                @*<input type="checkbox" name="remember" value="1" />*@ 记住我
                <span></span>
            </label>
            <button type="submit" class="btn green pull-right"> 登录 </button>
        </div>
    }
    <!-- END LOGIN FORM -->
</div>
<!-- END LOGIN -->
<!-- BEGIN COPYRIGHT -->
@Html.Partial("_copyright")